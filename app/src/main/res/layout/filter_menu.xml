<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="50dp"
    android:paddingTop="45dp"
    android:gravity="left"
    android:visibility="gone">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">
        <include android:id="@+id/types_submenu"
            layout="@layout/types_submenu" />
        <include android:id="@+id/distances_submenu"
            layout="@layout/distances_submenu" />
        <include android:id="@+id/prices_submenu"
            layout="@layout/prices_submenu" />
        <include android:id="@+id/contents_submenu"
            layout="@layout/contents_submenu" />
        <include android:id="@+id/ratings_submenu"
            layout="@layout/ratings_submenu" />
    </LinearLayout>
</LinearLayout>